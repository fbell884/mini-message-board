extends layout

block content
  h1= title
  p Add to the #{title}
  hr

  form(method='POST' action='/new')
    div.form-group
        label(for="name")
        input#name.form-control(type="text" name="name" placeholder="Name")
    div.form-group 
        label(for="message")
        input#message.form-control(type="text" name="message" placeholder="Message")
    div.form-group
        button#submit.btn.btn-primary(type="submit") Submit
    
